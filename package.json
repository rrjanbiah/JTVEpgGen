{
  "name": "jtvepggen",
  "version": "0.0.2",
  "description": "JTVEpgGen is a command-line application that generates epg.xml.gz from J TV API",
  "main": "./index.ts",
  "bin": "./dist/index.js",
  "scripts": {
    "start": "npx -y tsx index.ts",
    "build": "npx -y tsc && cp -r ./templates ./dist/ && npx -y pkg . --compress GZip",
    "test": "jest",
    "lint": "eslint . --ext .js,.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rrjanbiah/JTVEpgGen.git"
  },
  "keywords": [
    "epg"
  ],
  "author": "rrjanbiah",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rrjanbiah/JTVEpgGen/issues"
  },
  "homepage": "https://github.com/rrjanbiah/JTVEpgGen#readme",
  "dependencies": {
    "commander": "^14.0.1",
    "ejs": "^3.1.10",
    "figlet": "^1.9.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4"
  },
  "pkg": {
    "scripts": [],
    "assets": [
      "./node_modules/figlet/fonts/Standard.flf",
      "./dist/templates/**/*"
    ],
    "targets": [
      "node18-linux-x64"
    ],
    "//": [
      "node18-macos-x64",
      "node18-win-x86"
    ],
    "outputPath": "./dist"
  }
}
